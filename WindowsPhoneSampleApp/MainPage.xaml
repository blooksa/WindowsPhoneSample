<pages:PhonePage
    x:Class="WindowsPhoneSampleApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:WindowsPhoneSample.Core.Pages"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="MainPage" FontSize="32" Margin="18,12,12,12"/>
        <TextBox Grid.Row="1" Margin="12" Text="{Binding Path=PageContent, Mode=TwoWay}"/>
    </Grid>
</pages:PhonePage>
